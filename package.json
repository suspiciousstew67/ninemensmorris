{
  "name": "@suspiciousstew67/nine-mens-morris",
  "version": "3.0.0",
  "description": "A desktop version of the Nine Men's Morris game.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:local": "electron-builder --publish never"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/suspiciousstew67/ninemensmorris.git"
  },
  "author": "suspiciousstew67",
  "license": "ISC",
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.1",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.suspiciousstew67.ninemensmorris",
    "productName": "Nine Men's Morris",
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "files": [
      "main.js",
      "index.html",
      "script.js",
      "style.css",
      "preload.js",
      "ai.js"
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}
