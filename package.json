{
  "name": "@meaturious/modifed-ninemensmorris",
  "version": "1.6.1",
  "description": "A desktop version of the Nine Men's Morris game.",
  "homepage": "https://github.com/Meaturious/modified-ninemensmorris#readme",
  "bugs": {
    "url": "https://github.com/Meaturious/modified-ninemensmorris/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Meaturious/modified-ninemensmorris.git"
  },
  "license": "ISC",
  "author": "Meaturious",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron-updater": "^6.1.1" 
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.meaturious.ninemensmorris",
    "productName": "Nine Men's Morris",
    "publish": [
      {
        "provider": "github",
        "owner": "Meaturious",
        "repo": "modified-ninemensmorris"
      }
    ],
    "files": [
      "main.js",
      "index.html",
      "script.js",
      "style.css",
      "preload.js"
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}