{
  "name": "@meaturious/modified-ninemensmorris",
  "version": "2.2.4",
  "description": "A desktop version of the Nine Men's Morris game.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Meaturious/modified-ninemensmorris.git"
  },
  "author": "Meaturious",
  "license": "ISC",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.6.4",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.1"
  },
  "build": {
    "appId": "com.meaturious.ninemensmorris",
